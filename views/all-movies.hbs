<h1>Ironhack Cinema</h1>
<h3>Click on the movie to check the showtimes!</h3>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 m-4">
    {{#each data }}
    <div class="col p-4">
        <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" src="{{ this.image }}" class="img-fluid rounded-start"
                width="50%" height="300" role="img" preserveAspectRatio="xMidYMid slice" focusable="false">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-text mt-3 mb-3">{{ this.title }}</h5>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group mb-4">
                        <a href="/movies/{{ this.id }}" class="btn btn-sm btn-outline-secondary">See More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>